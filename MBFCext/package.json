{
  "name": "mbfc-chrome-extension",
  "version": "2.1.2",
  "description": "Facebook News Biases",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "release": "npm run release-notes && npm run update-versions && npm run clean && npm run build && node scripts/compress",
    "compress-keygen": "crx keygen",
    "release-notes": "markdown release-notes/ReleaseNotes.md > release-notes/ReleaseNotes.html && echo -n \"export const ReleaseNotes = \\`\" > src/ReleaseNotes.ts && cat release-notes/ReleaseNotes.html >> src/ReleaseNotes.ts && echo \"\\`;\" >> src/ReleaseNotes.ts",
    "clean": "rimraf build/ dev/ *.zip *.crx",
    "update-versions": "export VERSION=$(jq -r .version package.json) && jq \".version=\\\"$VERSION\\\"\" src/manifest.json | jq \".version_name=\\\"Release $VERSION\\\"\" > manifest.new && mv manifest.new src/manifest.json && git add src/manifest.json release-notes/* src/ReleaseNotes.ts && git commit -m\"Release $VERSION\"; exit 0",
    "start": "NODE_ENV=development webpack --watch"
  },
  "dependencies": {
    "chrome-options": "^1.0.0",
    "chrome-promise": "^3.0.5",
    "debug": "^4.1.1",
    "jquery": "^3.4.1",
    "lodash": "^4.17.19"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "@fortawesome/free-regular-svg-icons": "^5.11.2",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@types/chrome": "0.0.86",
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/debug": "^4.1.5",
    "@types/google.analytics": "0.0.40",
    "@types/jquery": "^3.3.31",
    "@types/moment": "^2.13.0",
    "@types/rimraf": "^2.0.2",
    "@types/typescript": "^2.0.0",
    "@types/webpack": "^4.39.5",
    "@types/webpack-merge": "^4.1.5",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^5.0.3",
    "crx": "^5.0.1",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "fontawesome-svg-sprite-generator": "^1.0.2",
    "fs-extra": "^7.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "markdown-to-html": "0.0.13",
    "minimist": "^1.2.0",
    "rimraf": "^2.7.1",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.4.5",
    "typescript": "~3.4.5",
    "webextension-polyfill": "^0.5.0",
    "webpack": "4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-extension-reloader": "^1.1.1",
    "write-file-webpack-plugin": "^4.5.0"
  }
}
