{
  "name": "media-bias-fact-check",
  "displayName": "Media Bias Fact Check",
  "description": "Show Media Bias / Fact Check ratings for Facebook, Twitter and news websites as you browse",
  "version": "4.0.0",
  "author": "Mike Crowe <drmikecrowe@gmail.com>",
  "browserslist": [
    "defaults and supports es6-module"
  ],
  "bugs": "https://github.com/drmikecrowe/mbfcext/issues",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@plasmohq/messaging": "^0.3.0",
    "@plasmohq/storage": "^1.6.0",
    "@types/webextension-polyfill": "^0.10.0",
    "debug": "^4.3.4",
    "effective-domain-name-parser": "^0.0.11",
    "gtm-module": "^1.0.7",
    "htm": "^3.1.1",
    "lodash": "^4.17.21",
    "neverthrow": "^6.0.0",
    "plasmo": "^0.70.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "vhtml": "^2.2.0",
    "webextension-polyfill": "^0.10.0",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/chrome": "0.0.236",
    "@types/debug": "^4.1.7",
    "@types/effective-domain-name-parser": "^0.0.0",
    "@types/eslint": "^8.37.0",
    "@types/eslint-config-prettier": "^6.11.0",
    "@types/lodash": "^4.14.194",
    "@types/node": "18.16.9",
    "@types/prettier": "2.7.2",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "@types/vhtml": "^2.2.4",
    "@types/whatwg-fetch": "^0.0.33",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-prettier": "0.0.0-empty",
    "husky": "^8.0.3",
    "postcss": "^8.4.23",
    "prettier": "2.8.8",
    "tailwindcss": "^3.3.2",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "homepage": "https://drmikecrowe.github.io/mbfcext/",
  "license": "MIT",
  "repository": "drmikecrowe/mbfcext",
  "manifest": {
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*",
          "src/background/icons/*"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ],
    "host_permissions": [
      "*://facebook.com/*",
      "*://*.facebook.com/*",
      "*://twitter.com/*",
      "*://*.twitter.com/*"
    ],
    "permissions": [
      "alarms",
      "storage",
      "tabs"
    ]
  }
}