  "scripts": {
    "build": "pnpm run lint && pnpm run chrome:prod && pnpm run firefox:prod && node compile/clean.js",
    "chrome:dev": "cross-env TARGET=chrome pnpm run webpack:dev",
    "chrome:prod": "cross-env NODE_ENV=production TARGET=chrome pnpm run webpack",
    "firefox:dev": "cross-env TARGET=firefox pnpm run webpack:dev",
    "firefox:prod": "cross-env NODE_ENV=production TARGET=firefox pnpm run webpack",
    "format": "prettier --loglevel warn --write \"**/*.{ts,js,css,md}\"",
    "lint": "eslint --cache --ext .ts,.tsx src/",
    "lint:fix": "prettier-eslint \"$(pwd)/src/**/*.ts\" \"$(pwd)/src/**/*.tsx\" \"$(pwd)/src/**/*.scss\" \"$(pwd)/src/**/*.md\" \"$(pwd)/src/**/*.css\" --write",
    "opera:dev": "cross-env TARGET=opera pnpm run webpack:dev",
    "opera:prod": "cross-env NODE_ENV=production TARGET=opera pnpm run webpack",
    "postbuild": "git push && git push --tags && sleep 5 && wget https://github.com/drmikecrowe/mbfcext/archive/v$(jq -r .version package.json).zip -P build/",
    "posttest": "pnpm run format",
    "prebuild": "pnpm run update-versions && rm build/chrome build/firefox -rf",
    "preinstall": "node -e \"if (process.env.npm_execpath.indexOf('pnpm') === -1) { console.log('\u001b[31mPlease use pnpm for installing\u001b[0m'); process.exit(1); }\"",
    "prewebpack": "rimraf build/${TARGET} && pnpm run update-sources",
    "prewebpack:dev": "pnpm run update-sources",
    "release:major": "pnpm version major && pnpm run build",
    "release:minor": "pnpm version minor && pnpm run build",
    "release:patch": "pnpm version patch && pnpm run build",
    "test": "npm run test:jest --",
    "test:coverage": "jest --coverage",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "update-sources": "cp -R ../mbfc-mirror/src/release/v3/* docs/v3/ -R && cp -R ../mbfc-mirror/src/release/v3/latest.json src/assets -R",
    "update-versions": "export VERSION=$(jq -r .version package.json) && jq \".version=\\\"$VERSION\\\"\" manifest.json | jq \".version_name=\\\"Release $VERSION\\\"\" > manifest.new && mv manifest.new src/manifest.json && git add src/manifest.json && git commit -m\"Release $VERSION\"; exit 0",
    "webpack": "node ./node_modules/webpack/bin/webpack.js --config compile/webpack.prod.js",
    "webpack:dev": "node --trace-deprecation $NODE_DEBUG ./node_modules/webpack/bin/webpack.js --config compile/webpack.dev.js --watch"
  }
